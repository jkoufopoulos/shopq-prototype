{
  "manifest_version": 3,
  "name": "Reclaim",
  "version": "1.0.0",
  "description": "Track return windows on your online purchases. Never miss a return deadline again.",

  "minimum_chrome_version": "116",
  "homepage_url": "https://github.com/jkoufopoulos/shopq-prototype",

  "permissions": [
    "identity",
    "storage",
    "tabs",
    "scripting",
    "notifications",
    "alarms"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "https://gmail.googleapis.com/*",
    "https://www.googleapis.com/gmail/*",
    "https://www.googleapis.com/oauth2/*",
    "https://reclaim-api-488078904670.us-central1.run.app/*",
    "https://*.inboxsdk.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; default-src 'self'; connect-src 'self' https://reclaim-api-488078904670.us-central1.run.app https://www.googleapis.com https://gmail.googleapis.com; style-src 'self' 'unsafe-inline'; img-src 'self' data:; frame-src 'none'"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Reclaim"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["dist/content.bundle.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],

  "oauth2": {
    "client_id": "142227390702-a1v5icgnl8sjc1e7t87gono0ebl55q6v.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png",
        "styles.css",
        "pageWorld.js",
        "theme.css",
        "modules/shared/theme.js",
        "returns-sidebar.html",
        "returns-sidebar.css",
        "returns-sidebar-inner.js"
      ],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}
