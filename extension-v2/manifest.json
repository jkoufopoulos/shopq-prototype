{
  "manifest_version": 3,
  "name": "Reclaim v2",
  "version": "0.1.0",
  "description": "Track return windows on your online purchases. Local-first, no backend required.",

  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],

  "host_permissions": [
    "https://*.amazon.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Reclaim"
  },

  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "js": ["dist/capture.bundle.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
